---
import { productos } from '../../data/productos'

const { slug } = Astro.params
const producto = productos.find(p => p.slug === slug)

if (!producto) {
  throw new Error(`Producto no encontrado para slug: ${slug}`)
}
---

<article class="max-w-2xl mx-auto p-4">
  <img src={producto.imagen} alt={producto.nombre} class="w-full h-64 object-cover mb-4 rounded" />
  <h1 class="text-3xl font-bold mb-2">{producto.nombre}</h1>
  <p class="text-gray-500 mb-2">{producto.categoria}</p>
  <p class="text-lg font-semibold mb-4">${producto.precio}</p>
  <p class="mb-6">{producto.descripcion}</p>

  <a
    href={`https://wa.me/5411123456789?text=Hola! Estoy interesado en ${producto.nombre}`}
    target="_blank"
    class="inline-block bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
  >
    Consultar por WhatsApp
  </a>
</article>
